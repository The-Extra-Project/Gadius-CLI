{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist/",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "explainFiles":true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {},
    "allowJs": true, 
  },
  "include": [
    "./src/index.ts",
 ],
  "ts-node": {
    "esm": false
  },
  "exclude": [
    "node_modules"
  ]
}
