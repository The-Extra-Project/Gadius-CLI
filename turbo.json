{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
      "tsconfig.base.json"
    ],
    "pipeline": {

      "build": {
        "inputs": ["apps/**", "packages/**"],
        "outputs": ["dist/**"]
      },
      "build:cli": {
        "inputs": ["cli/**"],
        "outputs": ["cli/dist/**"]
    }    
  }
}