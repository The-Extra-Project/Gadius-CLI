{
  "name": "dfns",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/dfns/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/dfns",
        "main": "packages/dfns/src/index.ts",
        "tsConfig": "packages/dfns/tsconfig.lib.json",
        "assets": ["packages/dfns/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/dfns/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/dfns"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/dfns"
      }
    }
  },
  "tags": []
}
